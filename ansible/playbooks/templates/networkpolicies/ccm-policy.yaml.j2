---
# Allow Hetzner CCM to reach Hetzner Cloud API
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-hcloud-ccm-egress
  namespace: kube-system
spec:
  podSelector:
    matchLabels:
      app: hcloud-cloud-controller-manager
  policyTypes:
    - Egress
  egress:
    # Allow DNS queries
    - to:
        - namespaceSelector:
            matchLabels:
              kubernetes.io/metadata.name: kube-system
        - podSelector:
            matchLabels:
              k8s-app: kube-dns
      ports:
        - protocol: UDP
          port: 53
        - protocol: TCP
          port: 53
    # Allow reaching API server
    - ports:
        - protocol: TCP
          port: 6443
    # Allow reaching Hetzner Cloud API (api.hetzner.cloud)
    - to:
        - ipBlock:
            cidr: 0.0.0.0/0
            except:
              - 169.254.0.0/16  # Exclude link-local
              - 192.168.0.0/16  # Exclude private network
      ports:
        - protocol: TCP
          port: 443
