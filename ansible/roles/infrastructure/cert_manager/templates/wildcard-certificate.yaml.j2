---
# Wildcard certificate for the domain
# Stored as a secret that Traefik can reference
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: wildcard-{{ domain | replace('.', '-') }}
  namespace: kube-system
spec:
  secretName: wildcard-{{ domain | replace('.', '-') }}-tls
  issuerRef:
    name: letsencrypt-production
    kind: ClusterIssuer
  commonName: "{{ domain }}"
  dnsNames:
    - "{{ domain }}"
    - "*.{{ domain }}"
